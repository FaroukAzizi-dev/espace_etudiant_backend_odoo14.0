<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===== Tree View (List) ===== -->
    <record id="view_niveau_tree" model="ir.ui.view">
        <field name="name">student.niveau.tree</field>
        <field name="model">student.niveau</field>
        <field name="arch" type="xml">
            <tree string="Niveaux">
                <field name="name" string="Nom du niveau"/>
                <field name="filiere_id" string="Filière"/>
            </tree>
        </field>
    </record>

    <!-- ===== Form View ===== -->
    <record id="view_niveau_form" model="ir.ui.view">
        <field name="name">student.niveau.form</field>
        <field name="model">student.niveau</field>
        <field name="arch" type="xml">
            <form string="Niveau">
                <sheet>
                    <group>
                        <field name="name" required="1" string="Nom"/>
                        <field name="filiere_id" required="1" string="Filière"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===== Action (Window) ===== -->
    <record id="action_student_niveau" model="ir.actions.act_window">
        <field name="name">Niveaux</field>
        <field name="res_model">student.niveau</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_niveau_tree"/> <!-- Links to the tree view -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier niveau
            </p>
        </field>
    </record>

</odoo>