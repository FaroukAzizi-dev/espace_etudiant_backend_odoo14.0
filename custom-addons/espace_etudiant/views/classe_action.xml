<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <odoo>
        <!-- Vue Tree pour Classe -->
        <record id="view_classe_tree" model="ir.ui.view">
            <field name="name">student.classe.tree</field>
            <field name="model">student.classe</field>
            <field name="arch" type="xml">
                <tree string="Classes">
                    <field name="name" />
                    <field name="filiere" />
                    <field name="niveau" />
                </tree>
            </field>
        </record>

        <!-- Vue Form pour Classe -->
        <record id="view_classe_form" model="ir.ui.view">
            <field name="name">student.classe.form</field>
            <field name="model">student.classe</field>
            <field name="arch" type="xml">
                <form string="Classe">
                    <group>
                        <field name="name" />
                        <field name="filiere" />
                        <field name="niveau" />
                    </group>
                </form>
            </field>
        </record>
    </odoo>

    <record id="action_student_classe" model="ir.actions.act_window">
        <field name="name">Classe</field>
        <field name="res_model">student.classe</field>
        <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_student_tree" />
    </record>


</odoo>