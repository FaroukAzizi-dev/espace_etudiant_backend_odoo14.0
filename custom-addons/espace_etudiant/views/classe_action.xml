<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!-- Tree View -->

    <record id="view_student_classe_tree" model="ir.ui.view">
        <field name="name">student.classe.tree</field>
        <field name="model">student.classe</field>
        <field name="arch" type="xml">

            <tree>

                <field name="name" />
                <field name="filiere_id" />
                <field name="niveau_id" />
                <field name="enseignant_ids" />
            </tree>
        </field>
    </record>


    <!-- Form View -->

    <record id="view_student_classe_form" model="ir.ui.view">
        <field name="name">student.classe.form</field>
        <field name="model">student.classe</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="filiere_id" />
                        <field name="niveau_id" />

                        <field name="enseignant_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_student_classe" model="ir.actions.act_window">
        <field name="name">Classe</field>
        <field name="res_model">student.classe</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first class

            </p>
        </field>
    </record>


</odoo>