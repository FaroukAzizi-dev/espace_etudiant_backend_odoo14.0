<odoo>
    <!-- Tree View -->
    <record id="view_reclamation_tree" model="ir.ui.view">
        <field name="name">student.reclamation.tree</field>
        <field name="model">student.reclamation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="titre"/>
                <field name="date_creation"/>
                <field name="etat"/>
                <field name="admin_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_reclamation_form" model="ir.ui.view">
        <field name="name">student.reclamation.form</field>
        <field name="model">student.reclamation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="titre"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="etudiant_id" readonly="1"/>
                            <field name="date_creation" readonly="1"/>
                        </group>
                        <group>
                            <field name="etat"/>
                            <field name="admin_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Détails">
                            <field name="description" readonly="1"/>
                        </page>
                        <page string="Pièce jointe" attrs="{'invisible': [('piece_jointe', '=', False)]}">
                            <field name="piece_jointe" filename="nom_fichier" readonly="1"/>
                        </page>
                        <page string="Réponse" attrs="{'invisible': [('etat', 'in', ['nouvelle','en_cours'])]}">
                            <field name="reponse_admin" readonly="1"/>
                            <field name="date_traitement" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
=    
    <!-- Actions -->
    <record id="action_student_reclamation" model="ir.actions.act_window">
        <field name="name">Mes Réclamations</field>
        <field name="res_model">student.reclamation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('etudiant_id.user_id', '=', uid)]</field>
    </record>
</odoo>