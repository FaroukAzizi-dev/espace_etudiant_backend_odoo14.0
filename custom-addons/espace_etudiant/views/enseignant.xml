<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Formulaire Enseignant -->
    <record id="view_enseignant_form" model="ir.ui.view">
        <field name="name">student.enseignant.form</field>
        <field name="model">student.enseignant</field>
        <field name="arch" type="xml">
            <form string="Enseignant">
                <sheet>
                    <group>
                        <field name="image_128" widget="image" class="oe_avatar"
                            options="{'preview_image': 'image_128'}" />
                    </group>

                    <notebook>
                        <page string="Informations personnelles">
                            <group string="Informations personnelles">
                                <field name="nom" required="1" />
                                <field name="prenom" required="1" />
                                <field name="email" required="1" placeholder="exemple@domaine.com" />
                                <field name="identifiant" required="1" placeholder="ex: ****JMT****" />
                                <field name="cin" required="1" placeholder="CIN" />
                                <field name="date_naissance" />
                                <field name="telephone" readonly="0" />
                                <field name="adresse" readonly="0" />
                            </group>

                            <group string="Compte utilisateur (généré automatiquement)" colspan="2">
                                <field name="user_id" readonly="1" options="{'no_create': True}" />
                            </group>

                            <group string="Informations professionnelles">
                                <field name="grade" />
                                <field name="specialite" />
                                <field name="departement" />
                                <field name="date_recrutement" />
                            </group>
                        </page>

                        <page string="Matières enseignées">
                            <field name="matiere_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="semestre" />
                                    <field name="classe_id" />
                                </tree>
                            </field>
                        </page>


                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Liste des enseignants -->
    <record id="view_enseignant_tree" model="ir.ui.view">
        <field name="name">student.enseignant.tree</field>
        <field name="model">student.enseignant</field>
        <field name="arch" type="xml">
            <tree string="Enseignants">
                <field name="image_128" widget="image" options="{'size': [40, 40]}" />
                <field name="nom" />
                <field name="prenom" />
                <field name="email" />
                <field name="identifiant" />
                <field name="cin" />
                <field name="grade" />
                <field name="specialite" />
                <field name="departement" />
                <field name="date_recrutement" />
            </tree>
        </field>
    </record>

    <!-- Vue Kanban des enseignants -->
    <record id="view_enseignant_kanban" model="ir.ui.view">
        <field name="name">student.enseignant.kanban</field>
        <field name="model">student.enseignant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="id" />
                <field name="image_128" />
                <field name="nom" />
                <field name="prenom" />
                <field name="email" />
                <field name="grade" />
                <field name="departement" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_image text-center">
                                <t t-if="record.image_128.raw_value">
                                    <img
                                        t-att-src="kanban_image('student.enseignant', 'image_128', record.id.raw_value)"
                                        class="oe_kanban_avatar"
                                        style="max-height: 80px; border-radius: 50%;"
                                        alt="Photo enseignant" />
                                </t>
                                <t t-if="!record.image_128.raw_value">
                                    <img src="/web/static/src/img/placeholder.png"
                                        class="oe_kanban_avatar"
                                        style="max-height: 80px; border-radius: 50%;"
                                        alt="Photo par défaut" />
                                </t>
                            </div>
                            <div class="o_kanban_details text-center mt8">
                                <strong>
                                    <t t-esc="record.nom.value" />
                                </strong>
                                <br />
                                <span>
                                    <t t-esc="record.prenom.value" />
                                </span>
                                <br />
                                <span>
                                    <t t-esc="record.email.value" />
                                </span>
                                <br />
                                <small>
                                    <t t-esc="record.grade.value" />
                                </small>
                                <br />
                                <small>
                                    <t t-esc="record.departement.value" />
                                </small>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action d'ouverture -->
    <record id="action_student_enseignant" model="ir.actions.act_window">
        <field name="name">Enseignants</field>
        <field name="res_model">student.enseignant</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_enseignant_kanban" />
    </record>

</odoo>