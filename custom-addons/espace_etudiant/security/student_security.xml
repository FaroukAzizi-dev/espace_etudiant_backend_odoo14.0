<odoo>
    <data noupdate="1">
        <!-- Student Group -->
        <record id="group_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="base.module_category_portal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Admin Group -->
        <record id="group_admin" model="res.groups">
            <field name="name">Student Admin</field>
            <field name="category_id" ref="base.module_category_education"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="student_reclamation_rule" model="ir.rule">
            <field name="name">Student Reclamations</field>
            <field name="model_id" ref="model_student_reclamation"/>
            <field name="domain_force">
                ['|', ('etudiant_id.user_id','=',user.id),
                      ('admin_id.user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4, ref('group_student'))]"/>
        </record>
    </data>
</odoo>